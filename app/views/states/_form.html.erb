<div class="card">
  <h5 class="card-header">States</h5>
  <div class="card-body">
    <%= form_with model: @state do |form|%>
    <div class="row mx-1">
      <div class="col-md-1">
        <%= form.label :name %>
      </div>
      <div class="col-md-4">
        <%= form.text_field :name %>
      </div>
    </div><br>
  
    <%= form.submit class: "btn btn-dark" %>
    <% end %>
  </div>
</div>

